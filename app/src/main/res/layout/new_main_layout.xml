<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/tv_java_show"
        android:text="java 渲染三角形"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/tv_java_show_rgb"
        android:text="渲染rgb图片"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/tv_java_show_yuv"
        android:text="渲染yuv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/tv_java_show_yuv_file"
        android:text="渲染yuv文件"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>